<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.breeze.boot.system.mapper.SysPermissionMapper">

    <resultMap id="BaseResultMap" type="com.breeze.boot.system.domain.SysPermission">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="permissionName" column="permission_name" jdbcType="VARCHAR"/>
        <result property="permissionCode" column="permission_code" jdbcType="VARCHAR"/>
        <result property="permissionType" column="permission_type" jdbcType="VARCHAR"/>
        <result property="operator" column="operator" jdbcType="VARCHAR"/>
        <result property="strSql" column="str_sql" jdbcType="VARCHAR"/>
        <result property="permissions" column="permissions" jdbcType="VARCHAR"/>
        <result property="createBy" column="create_by" jdbcType="VARCHAR"/>
        <result property="createName" column="create_name" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateBy" column="update_by" jdbcType="VARCHAR"/>
        <result property="updateName" column="update_name" jdbcType="VARCHAR"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="isDelete" column="is_delete" jdbcType="TINYINT"/>
        <result property="deleteBy" column="delete_by" jdbcType="VARCHAR"/>
        <result property="tenantId" column="tenant_id" jdbcType="BIGINT"/>
    </resultMap>

    <select id="listPage" resultType="com.breeze.boot.system.domain.SysPermission">
        SELECT
        a.id,
        a.`permission_name`,
        a.`permission_code`,
        a.`permission_type`,
        a.operator,
        a.str_sql,
        a.permissions
        FROM
        sys_permission AS a
        <where>
            a.is_delete = 0
            <if test="permissionDTO.permissionName != null and permissionDTO.permissionName != ''">
                AND a.permission_name LIKE CONCAT('%' , #{permissionDTO.permissionName}, '%')
            </if>
            <if test="permissionDTO.permissionCode != null and permissionDTO.permissionCode != ''">
                AND a.permission_code LIKE CONCAT('%' , #{permissionDTO.permissionCode}, '%')
            </if>
        </where>

    </select>

</mapper>
