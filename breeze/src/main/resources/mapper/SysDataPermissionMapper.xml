<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.breeze.boot.system.mapper.SysDataPermissionMapper">

    <resultMap id="BaseResultMap" type="com.breeze.boot.system.domain.SysDataPermission">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="dataPermissionName" column="data_permission_name" jdbcType="VARCHAR"/>
        <result property="dataPermissionCode" column="data_permission_code" jdbcType="VARCHAR"/>
        <result property="dataPermissionType" column="data_permission_type" jdbcType="VARCHAR"/>
        <result property="operator" column="operator" jdbcType="VARCHAR"/>
        <result property="strSql" column="str_sql" jdbcType="VARCHAR"/>
        <result property="dataPermissions" column="data_permissions" jdbcType="VARCHAR"/>
        <result property="createBy" column="create_by" jdbcType="VARCHAR"/>
        <result property="createName" column="create_name" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateBy" column="update_by" jdbcType="VARCHAR"/>
        <result property="updateName" column="update_name" jdbcType="VARCHAR"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="isDelete" column="is_delete" jdbcType="TINYINT"/>
        <result property="deleteBy" column="delete_by" jdbcType="VARCHAR"/>
        <result property="tenantId" column="tenant_id" jdbcType="BIGINT"/>
        <collection property="dataPermissionTableSqlDiyData" javaType="java.util.List"
                    ofType="com.breeze.boot.system.domain.SysDictItem"
                    column="{dataPermissionId=id}"
                    select="com.breeze.boot.system.mapper.SysDataPermissionCustomMapper.listDataPermissionCustom">
        </collection>
    </resultMap>

    <select id="listPage" resultMap="BaseResultMap">
        SELECT
        a.id,
        a.`data_permission_name`,
        a.`data_permission_code`,
        a.`data_permission_type`,
        a.operator,
        a.str_sql,
        a.data_permissions
        FROM
        sys_data_permission AS a
        <where>
            a.is_delete = 0
            <if test="dataPermissionDTO.dataPermissionName != null and dataPermissionDTO.dataPermissionName != ''">
                AND a.data_permission_name LIKE CONCAT('%' , #{dataPermissionDTO.dataPermissionName}, '%')
            </if>
            <if test="dataPermissionDTO.dataPermissionCode != null and dataPermissionDTO.dataPermissionCode != ''">
                AND a.data_permission_code LIKE CONCAT('%' , #{dataPermissionDTO.dataPermissionCode}, '%')
            </if>
        </where>
        ORDER BY a.create_time DESC
    </select>

</mapper>
