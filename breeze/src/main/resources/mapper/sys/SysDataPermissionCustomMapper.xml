<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.breeze.boot.system.mapper.SysDataPermissionCustomMapper">

    <resultMap id="BaseResultMap" type="com.breeze.boot.system.domain.SysDataPermissionCustom">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="dataPermissionId" column="data_permission_id" jdbcType="BIGINT"/>
        <result property="compare" column="compare" jdbcType="VARCHAR"/>
        <result property="tableColumn" column="table_column" jdbcType="VARCHAR"/>
        <result property="operator" column="operator" jdbcType="VARCHAR"/>
        <result property="conditions" column="conditions" jdbcType="VARCHAR"/>
        <result property="createBy" column="create_by" jdbcType="VARCHAR"/>
        <result property="createName" column="create_name" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateBy" column="update_by" jdbcType="VARCHAR"/>
        <result property="updateName" column="update_name" jdbcType="VARCHAR"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="isDelete" column="is_delete" jdbcType="TINYINT"/>
        <result property="deleteBy" column="delete_by" jdbcType="VARCHAR"/>
        <result property="tenantId" column="tenant_id" jdbcType="BIGINT"/>
    </resultMap>

    <select id="listDataPermissionCustom" resultType="com.breeze.boot.system.domain.SysDataPermissionCustom">
        SELECT a.id,
               a.data_permission_id,
               a.compare,
               a.table_column,
               a.operator,
               a.conditions,
               a.create_by,
               a.create_name,
               a.create_time,
               a.update_by,
               a.update_name,
               a.update_time,
               a.is_delete,
               a.delete_by,
               a.tenant_id
        FROM sys_data_permission_custom AS a
        WHERE a.is_delete = 0
          AND a.data_permission_id = #{dataPermissionId}
    </select>
</mapper>
